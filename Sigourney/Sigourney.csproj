<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <PackageId>Sigourney</PackageId>
    <TargetFrameworks>net45;netstandard2.0</TargetFrameworks>
    <Version>0.1.1</Version>
    <PackageReleaseNotes>MSBuildWeaver.Log2 is properly initialized. Only MSBuildWeaver.AssemblyPath is marked as required.</PackageReleaseNotes>
    <Authors>Theodore Tsirpanis</Authors>
    <Copyright>Copyright Â© Theodore Tsirpanis. Licensed under the MIT License. Contains some code from Fody, which is licensed under the MIT License as well.</Copyright>
    <PackageProjectUrl>https://github.com/teo-tsirpanis/Sigourney</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <PackageTags>ILWeaving;Cecil</PackageTags>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <LangVersion>8.0</LangVersion>
    <Nullable>enable</Nullable>
  </PropertyGroup>
  <ItemGroup>
    <None Include="Sigourney.props" Pack="true" PackagePath="build" />
    <None Include="Sigourney.targets" Pack="true" PackagePath="build" />
    <PackageReference Include="JetBrains.Annotations" Version="2020.1.0" PrivateAssets="all" />
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="all" />
    <PackageReference Include="Mono.Cecil" Version="0.11.3" />
    <PackageReference Include="Serilog" Version="2.10.0" />
    <PackageReference Include="Serilog.Sinks.MSBuild" Version="1.2.1" />
  </ItemGroup>
</Project>
